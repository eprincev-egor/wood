{
    "extends": "eslint:recommended",
    "rules": {
        "quotes": ["error", "double"],
        "semi": ["error", "always"],
        "no-console": "off",
        "comma-dangle": ["error", "never"],
        "one-var": "off",
        "indent": ["error", 4],
        "space-infix-ops": ["error"],
        "strict": ["error", "global"],
        "no-var": ["error"]
    },
    "parserOptions": {
        "ecmaVersion": 8
    },
    "env": {
        "node": true,
        "browser": true,
        "amd": true
    },
    "globals": {
        "console": true,
        "Promise": true,
        "Float32Array": true,
        "Uint8Array": true
    }
}
